#!/bin/bash
if [ $# -lt 1 ]; then
    echo "Usage: start-simple-server client [bits] [region] [size] [ami]"
    echo "client: is profab client"
    echo "bits: could be either 32 or 64*"
    echo "region: could be us-west-1*, us-west-2 or ap-southeast-1"
    echo "size: size of the instance (default is t1.micro)"
    echo "ami: is AMI ID (default is ami-4d580408 which is Ubuntu Natty)"
    echo ""
    echo "* is default"
    exit 1
else
    client=$1 
    bits=${2-'32'}
    region=${3-'us-west-1'}
    size=${4-'t1.micro'}
    ami=${5-'ami-4d580408'}
    pf-server-start $client --bits $bits --region $region --size $size --ami $ami
fi
