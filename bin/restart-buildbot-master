#!/usr/bin/env python
import buildbot
import fabric.network, logging, sys

def main(using_client, *args):
    logging.basicConfig(level=logging.INFO)
    buildbot.restart_buildbot_master(using_client, *args)

if __name__=="__main__":
    msg = """Usage: reset-buildbot-master-on-server client ec2host project_name
    client: is profab client
    ec2_host: public host of EC2 instance
    project_name: name of the project that buildbot run against
    """
    try:
        if len(sys.argv) <= 4:
            print msg
            sys.exit(-1)
        main(*sys.argv[1:])
    finally:
        fabric.network.disconnect_all()

