#!/bin/bash
if [ $# -lt 3 ]; then
    echo "Usage: reset-buildbot-slave client ec2host project_name"
    echo ""
    echo "client: is profab client"
    echo "ec2_host: public host of EC2 instance"
    echo "project_name: name of the project that buildbot run against"
    exit 1
else
    client=$1
    ec2_host=$2
    project=$3
    pf-server-role-add $client $ec2_host --proteus.restart_buildbot_pg_slave $project
fi

