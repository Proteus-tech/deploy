#!/usr/bin/env python

import sys
import shutil

if __name__ == "__main__":
    args_length = len(sys.argv)
    if args_length < 1:
        print "Usage : run this script in project's base folder"
        sys.exit()
    else:
        template_name = 'build_slave_svn.template'
        template_location = '%s/bin/%s' % (sys.prefix, template_name)
        target_location = 'buildbot_config/slaves_svn/build_svn_slave.py'
        shutil.copy(src=template_location, dst=target_location)




